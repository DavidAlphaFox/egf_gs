{erl_opts, [{i, "./_build/default/plugins/gpb/include/"}]}.
{plugins, [{rebar3_gpb_plugin, "2.13.0"}]}.

{gpb_opts, [{i, "proto"},
            {module_name_prefix, "pb_"},
            {o_erl, "src/proto/"},
            {o_hrl, "include/"},
            type_specs]}.

{ provider_hooks, [
    {pre, [
        {compile, {protobuf, compile}},
        {clean, {protobuf, clean}}
    ]}
]}.

{deps, [
    {esockd, {git, "https://github.com/emqx/esockd.git", {tag, "5.6.2"}}},
    {egf_config, {git, "https://github.com/ForLina/egf_config.git", {tag, "0.0.1"}}}
]}.

{shell, [
    {config, "config/sys.config"},
    {apps, [egf_gs]}
]}.
